# AI Chatbot Platform - Environment Variables Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# OpenAI Configuration (Optional - for GPT-3.5/GPT-4 models)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Server Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000
HOST=0.0.0.0

# =============================================================================
# AI Model Settings
# =============================================================================
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.7

# Available models:
# - gpt-3.5-turbo (requires API key)
# - gpt-4 (requires API key)
# - local-llama (free, runs locally)
# - local-mistral (free, runs locally)

# =============================================================================
# Local Model Configuration
# =============================================================================
# Hugging Face model to use when OpenAI is not available
LOCAL_MODEL_NAME=microsoft/DialoGPT-medium
# Options: microsoft/DialoGPT-small, microsoft/DialoGPT-medium, microsoft/DialoGPT-large

# =============================================================================
# Storage Configuration
# =============================================================================
CONVERSATIONS_DIR=backend/conversations
DATA_DIR=data

# =============================================================================
# Security (for production)
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# =============================================================================
# Database (Optional - for future enhancements)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost/chatbot_db
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============================================================================
# Rate Limiting (Optional)
# =============================================================================
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_REQUESTS=60
# RATE_LIMIT_PERIOD=60

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. For production, use environment variables instead of .env file
# 4. Set FLASK_DEBUG=False in production
